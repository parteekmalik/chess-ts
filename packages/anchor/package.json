{
  "name": "@acme/anchor",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./src/*": "./src/*",
    "./client/*": "./src/client/*",
    "./generated/*": "./src/client/js/generated/*",
    "./instructions/*": "./src/client/js/generated/instructions/*",
    "./accounts/*": "./src/client/js/generated/accounts/*",
    "./types/*": "./src/client/js/generated/types/*",
    "./errors/*": "./src/client/js/generated/errors/*",
    "./helpers/*": "./src/helpers/*"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "anchor": "anchor",
    "anchor-build": "anchor build",
    "anchor-localnet": "anchor localnet",
    "anchor-test": "anchor test",
    "codama:js": "codama run js -c ./codama.mjs",
    "ci": "npm run build && npm run lint && npm run format:check && npm run codama:js",
    "setup": "npm run anchor keys sync && npm run codama:js",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@acme/ui": "workspace:*",
    "@solana/webcrypto-ed25519-polyfill": "^2.3.0",
    "bn.js": "catalog:",
    "bs58": "catalog:",
    "codama": "^1.3.3",
    "gill": "0.10.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@codama/cli": "^1.3.1",
    "@codama/nodes-from-anchor": "^1.2.5",
    "@codama/renderers-js": "^1.3.4",
    "@types/bn.js": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "zod": "catalog:"
  },
  "prettier": "@acme/prettier-config"
}
