{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  // Tell Rust Analyzer which Cargo.toml belongs to your Anchor program(s)
  "rust-analyzer.linkedProjects": [
    "apps/web3/anchor/programs/web3/Cargo.toml"
  ],

  // Optional: run cargo check only on save (helps performance)
  "rust-analyzer.checkOnSave.command": "clippy",

  // Optional: specify Solanaâ€™s BPF target (not always needed)
  // "rust-analyzer.cargo.target": "bpfel-unknown-unknown",

  // Better Rust formatting
  "editor.formatOnSave": true,
  "rust-analyzer.inlayHints.enable": true,
  "typescript.tsdk": "node_modules/typescript/lib"
}
